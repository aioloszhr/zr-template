{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "newLine": "LF",
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "es5", "es6", "dom.iterable", "es2022"],
    "skipLibCheck": true,
    "jsxImportSource": "vue",
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "include": ["vite-helper/index.ts", "vite.config.ts", "vite-env.d.ts", "src/**/*"]
}
